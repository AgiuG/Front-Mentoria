{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:3001",
  "dependencies": {
    "@material-ui/core": "^4.12.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "material": "^0.4.3",
    "material-ui": "^0.20.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cypress": "^10.11.0"
  },
  "pipeline-linux-coverage": {
    "test": "env-cmd -f./.env.test jest",
    "cypress": "start-server-and-test http://localhost:3000 cy:run",
    "cy:run": "cypress run",
    "merge-coverage": "npx istanbul-merge --out coverage.json ./coverage/coverage-final.json ./cypress-coverage/coverage-final.json && npx istanbul report --include coverage.json --dir ./coverage-merge lcovonly",
    "sonar-pipeline": "yarn test && yarn cypress && yarn merge-coverage",
    "pipeline-linux-coverage": "echo fs.inotify.max_user_watches=524288 | sudo tee -a /etc/sysctl.conf && sudo sysctl -p && yarn sonar-pipeline"
  }
}
